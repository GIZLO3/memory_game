<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="memory_game.views.GameOver"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <AbsoluteLayout>
            <AbsoluteLayout.Background>
                <LinearGradientBrush StartPoint="0.5,0"
                                     EndPoint="0.5,1">
                    <GradientStop Color="#c51ad9"
                                  Offset="0.0"/>
                    <GradientStop Color="#6419b1"
                                  Offset="1.0"/>
                </LinearGradientBrush>
            </AbsoluteLayout.Background>

            <StackLayout AbsoluteLayout.LayoutBounds="0.5, 0.5" AbsoluteLayout.LayoutFlags="PositionProportional">
                <Label Text="GAMEOVER" FontSize="20" TextColor="White"/>
                <Label x:Name="Score" FontSize="35" TextColor="White" HorizontalTextAlignment="Center"/>
                <Button Text="Back To Menu" Clicked="BackToMenu"/>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>